@model task_management_system.Models.Task

<div>
    <div>
        <label>Task Completed</label>
        <p>@Model.CompletionPercentage</p>
    </div>
    <div>
        <label>Is Task Completed</label>
        <p>@Model.IsCompleted</p>
    </div>
</div>

<form asp-action="UpdateCompletion">
    <div class="form-group">
        <label asp-for="IsCompleted" class="label-control"></label>
        <input asp-for="IsCompleted" name="isCompleted" aria-checked="@(Model.IsCompleted?true:false)" />
    </div>
    <div class="form-group">
        <label asp-for="CompletionPercentage" name="completionPercentage" class="label-control"></label>
        <select class="form-control" asp-for="CompletionPercentage" aria-selected="@Model.CompletionPercentage">
            <option value="0.00">0</option>
            <option value="25.00">25</option>
            <option value="50.00">50</option>
            <option value="75.00">75</option>
            <option value="100.00">100</option>
        </select>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Change"/>
    </div>
</form>

