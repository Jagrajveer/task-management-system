@model task_management_system.Models.Note

<form asp-action="LeaveNote">
    <div class="form-group">
        <input asp-for="TaskId" type="hidden" class="form-control" value="@ViewBag.TaskId" />
    </div>
    <div class="form-group">
        <label asp-for="Body" class="label-control"></label>
        <textarea asp-for="Body" class="form-control" ></textarea>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Submit"/>
    </div>
</form>
