@model User



<form asp-action="Edit">
    <div class="form-group">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
    </div>
    <div class="form-group">
        <label class="label-control" asp-for="Salary" value="@Model.Salary"></label>
        <input asp-for="Salary" class="form-control"/>
    </div>
    <div class="form-group">
        <label class="label-control" asp-for="PaymentDuration"></label>
        <select asp-for="PaymentDuration" class="form-control" aria-selected="@Model.PaymentDuration" asp-items="Html.GetEnumSelectList<User.PaymentDurationType>()"></select>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Submit"/>
    </div>
</form>
