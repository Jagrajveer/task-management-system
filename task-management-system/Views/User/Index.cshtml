@model IEnumerable<User>

<table class="table">
    <thead>
    <tr>
        <th>
            UserName
        </th>
        <th>
            Email
        </th>
        <th>
            Salary
        </th>
        <th>
            Payment Duration
        </th>
        <th></th>
    </tr>
    </thead>
    @foreach (var user in @Model) {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.Salary</td>
            <td>@user.PaymentDuration</td>
            <td>
                <a asp-action="Edit" asp-controller="User" asp-route-id="@user.Id">Edit</a>
                <a asp-action="Delete" asp-controller="User" asp-route-id="@user.Id" >Delete</a>
            </td>
        </tr>
    }
</table>
