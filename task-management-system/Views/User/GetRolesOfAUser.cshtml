@model dynamic

@if (ViewBag.roles == null) {
    <form asp-action="GetRolesOfAUser">
        <div class="form-group">
            <label for="User" class="label-control">User</label>
            <select class="form-control" name="userId" asp-items="@ViewBag.users"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Show Roles" class="btn btn-primary" />
        </div>
    </form>
}

@if (@ViewBag.roles != null) {
    <h2>Roles of @Model.UserName</h2>
    <ul>
        @foreach (var role in ViewBag.roles) {
            <li>@role</li>
        }
    </ul>
}
